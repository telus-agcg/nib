#!/bin/bash

source "/usr/local/bin/_common"
source "/usr/local/bin/_help"

service=$(normalize $1)

shift

SCRIPT="
  if [ -f bin/setup.before ]; then
    bin/setup.before
  fi

  if [ -f bin/setup ]; then
    bin/setup
  else
    gem install bundler
    bundle install --jobs 4
    rake db:create db:migrate
  fi

  if [ -f bin/setup.after ]; then
    bin/setup.after
  fi
"

docker-compose run \
  --rm \
  $service \
  /bin/sh -c "$SCRIPT"
